<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/transprant"
                android:centerY="0.75"
                android:endColor="@color/transprant"
                android:startColor="@color/transprant" />
        </shape>


    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/transprant"
                    android:centerY="0.75"
                    android:endColor="@color/transprant"
                    android:startColor="@color/transprant" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/deep_orange"
                    android:centerY="0.75"
                    android:endColor="@color/light_orange"
                    android:startColor="@color/light_orange" />
            </shape>
        </clip>
    </item>

</layer-list>